{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2015",
    "declaration": true,
    "stripInternal": true,

    "strictNullChecks": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "vuex-tstore/*": ["./src/*"],
      "vuex-tstore": ["./src/index.ts"]
    },

    "rootDir": "./src",

    "sourceRoot": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,

    "experimentalDecorators": true,
    "esModuleInterop": true
  }
}
